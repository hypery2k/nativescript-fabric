{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "es2015.iterable",
            "es6",
            "dom"
        ],
        "types": [
            "jasmine"
        ]
    },
    "filesGlob": [
        "./app/",
        "./references.d.ts"
    ],
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "test",
        "platforms"
    ]
}
